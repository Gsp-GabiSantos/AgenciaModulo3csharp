@model Agencia.Models.CadastroDestino

@{
    ViewData["Title"] = "Delete";
}
<div class="container">
<h3>Deletar</h3>

<h3>Tem certeza que deseja excluir?</h3>
<div>
    <h4>Cadastro Destino</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome Destino
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome_Destino)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Lugar)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Lugar)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdDestino" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para Lista</a>
    </form>
</div>
</div>

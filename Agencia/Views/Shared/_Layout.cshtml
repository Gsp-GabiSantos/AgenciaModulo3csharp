<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Gabriela's Tour"] - Agência</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Agencia.styles.css" asp-append-version="true" />
    
</head>
<body>
    <header>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> <img src="~/Imagens/GabrielasTour.png" class="img-thumbnail" alt=""></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark menuCor" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark menuCor" asp-area="" asp-controller="Home" asp-action="Destinos">Destinos</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-dark menuCor" asp-area="" asp-controller="Home" asp-action="Promoções">Promoções</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-dark menuCor" asp-area="" asp-controller="Home" asp-action="FaleConosco">Fale Conosco</a>
                        </li>

                         <li class="nav-item">
                            <a class="nav-link text-dark menuCor" asp-area="" asp-controller="CadastroDestinos" asp-action="Index">Cadastrar Destino</a>
                        </li>

                         <li class="nav-item">
                            <a class="nav-link text-dark menuCor" asp-area="" asp-controller="Ajudas" asp-action="Index">Ajuda</a>
                        </li>

                         <li class="nav-item">
                            <a class="nav-link text-dark menuCor" asp-area="" asp-controller="Compras" asp-action="Index">Comprar</a>
                        </li>
                       
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>












 
